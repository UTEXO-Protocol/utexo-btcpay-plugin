@model RGBSetupViewModel
@{
    ViewData["Title"] = "Setup Utexo Wallet";
}

<div class="sticky-header-setup"></div>
<div class="sticky-header">
    <h2>@ViewData["Title"]</h2>
</div>

<partial name="_StatusMessage" />

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Create Utexo Wallet</h4>
                
                <p class="text-muted mb-4">
                    Accept native USDT and digital asset payments powered by Utexo. 
                    Create a wallet to start receiving payments.
                </p>

                <form asp-action="SetupWallet" asp-route-storeId="@Model.StoreId" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="WalletName" class="form-label"></label>
                        <input asp-for="WalletName" class="form-control" placeholder="My Utexo Wallet" />
                        <span asp-validation-for="WalletName" class="text-danger"></span>
                    </div>

                    <div class="alert alert-info">
                        <strong>Note:</strong> A new wallet will be created with secure keys.
                        <br/>
                        <small class="text-muted">Network: <code>@Model.Network</code> | Electrum: <code>@Model.ElectrumUrl</code></small>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <span class="fa fa-wallet"></span> Create Wallet
                    </button>
                </form>
            </div>
        </div>
        
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">What is Utexo?</h5>
                <p class="card-text">
                    Utexo enables native USDT and BTC payments on Bitcoin with instant zero-fee settlements.
                    All payments are private, non-custodial, and secured by Bitcoin's proof-of-work.
                </p>
                <ul>
                    <li><strong>Zero Fees:</strong> No transaction fees for asset transfers</li>
                    <li><strong>Instant:</strong> Lightning-fast settlement times</li>
                    <li><strong>Private:</strong> Asset transfers are not visible on the blockchain</li>
                    <li><strong>Non-custodial:</strong> You control your keys</li>
                </ul>
            </div>
        </div>
    </div>
</div>

